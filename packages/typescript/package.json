{
  "name": "@jamsocket/javascript",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist && rm -f tsconfig.tsbuildinfo",
    "dev": "npm run build -- --watch",
    "prepare": "npm run clean && npm run build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx}\""
  },
  "version": "0.1.4",
  "description": "JavaScript/TypeScript, and React libraries for interacting with session backends and the Jamsocket platform.",
  "exports": {
    "./server": "./dist/server.js",
    "./client": "./dist/client.js",
    "./react": "./dist/react.js",
    "./socketio": "./dist/socketio.js",
    "./types": "./dist/types.js"
  },
  "files": [
    "dist/**/*"
  ],
  "author": "Taylor Baldwin <taylor@driftingin.space>",
  "homepage": "https://github.com/jamsocket/jamsocket",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamsocket/jamsocket.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.14",
    "typescript": "^5.1.6",
    "prettier": "^3.0.2"
  },
  "bugs": {
    "url": "https://github.com/jamsocket/jamsocket/issues"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "isomorphic-fetch": "^3.0.0",
    "server-only": "^0.0.1",
    "socket.io-client": "^4.7.1"
  }
}
